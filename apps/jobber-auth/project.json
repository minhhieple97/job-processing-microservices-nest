{
  "name": "jobber-auth",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/jobber-auth/src",
  "projectType": "application",
  "tags": [],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "webpack-cli build",
        "args": ["node-env=production"]
      },
      "configurations": {
        "development": {
          "args": ["node-env=development"]
        }
      },
      "dependsOn": ["generate-prisma"]
    },
    "ci-build": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/jobber-auth && npx prisma generate",
          "webpack-cli build node-env=production"
        ],
        "parallel": false
      }
    },
    "serve": {
      "executor": "@nx/js:node",
      "defaultConfiguration": "development",
      "dependsOn": ["build"],
      "options": {
        "buildTarget": "jobber-auth:build",
        "runBuildTargetDependencies": true
      },
      "configurations": {
        "development": {
          "buildTarget": "jobber-auth:build:development"
        },
        "production": {
          "buildTarget": "jobber-auth:build:production"
        }
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cd apps/jobber-auth && npx prisma generate",
          "jest --passWithNoTests=true --runInBand"
        ],
        "parallel": false
      }
    },
    "generate-prisma": {
      "command": "prisma generate",
      "options": {
        "cwd": "{projectRoot}",
        "input": ["prisma/schema.prisma"]
      },
      "cache": true
    },
    "migrate-prisma": {
      "command": "prisma migrate dev",
      "options": {
        "cwd": "{projectRoot}"
      }
    }
  }
}
